<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>مختبر أسئلة تفاعلي</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f5f7fa;
      color: #333;
      margin: 0;
      padding: 0;
      direction: rtl;
    }
    .container {
      max-width: 700px;
      margin: 40px auto;
      padding: 20px 24px;
      background: #fff;
      border-radius: 12px;
      box-shadow: 0 6px 18px rgba(0,0,0,.08);
    }
    h1 {
      font-size: 1.6rem;
      margin-bottom: 16px;
    }
    .q-title {
      font-size: 1.15rem;
      margin-bottom: 12px;
    }
    .option {
      display: block;
      margin: 8px 0;
      padding: 8px 10px;
      border-radius: 8px;
      border: 1px solid #ddd;
      background: #fafafa;
      cursor: pointer;
    }
    .option:hover {
      background: #f0f0f0;
    }
    .controls {
      display: flex;
      justify-content: space-between;
      margin-top: 14px;
    }
    button {
      padding: 10px 14px;
      border: none;
      border-radius: 8px;
      background: #2e7d32;
      color: white;
      cursor: pointer;
      font-size: 0.95rem;
    }
    button.secondary {
      background: #555;
    }
    .summary {
      line-height: 1.6;
    }
    .answerRow {
      padding: 6px 0;
      border-bottom: 1px dashed #ddd;
    }
    .correct { color: #1e88e5; }
  </style>
</head>
<body>
  <div class="container" id="quiz-app">
    <h1>اختبار قصير: اسئلة مبسطة</h1>
    <div id="quiz-area"></div>
    <div id="results-area" style="display:none;"></div>
  </div>

  <script>
    // الأسئلة: عدّله حسب موضوعك
    const questions = [
      { q: "ما هو الملف الذي يحتوي على هيكل صفحة الويب؟", options: ["HTML", "CSS", "JS"], answer: 0 },
      { q: "أي وسم في HTML يُستخدم لإضافة رابط؟", options: ["<p>", "<a>", "<div>"], answer: 1 },
      { q: "ما هي وحدة القياس الشائعة في CSS للتحكم في حجم النص؟", options: ["px", "kg", "s"], answer: 0 },
      { q: "أي لغة تستخدم عادة لإضافة التفاعل في صفحة الويب؟", options: ["Python", "HTML", "JavaScript"], answer: 2 },
      { q: "أي وسم يُستخدم لإدراج صورة؟", options: ["<image>", "<img>", "<src>"], answer: 1 }
    ];

    let currentIndex = 0;
    const answers = new Array(questions.length).fill(null);

    const quizArea = document.getElementById('quiz-area');
    const resultsArea = document.getElementById('results-area');

    function renderQuestion() {
      const q = questions[currentIndex];
      // بناء خيارات السؤال كخانات اختيار radio
      const optionsHtml = q.options.map((opt, i) => {
        const checked = answers[currentIndex] === i ? 'checked' : '';
        return `
          <label class="option">
            <input type="radio" name="option" value="${i}" ${checked} />
            ${opt}
          </label>
        `;
      }).join('');

      quizArea.innerHTML = `
        <div class="q-title">${currentIndex + 1}. ${q.q}</div>
        <form id="option-form">
          ${optionsHtml}
        </form>
        <div class="controls">
          <button id="prev" ${currentIndex === 0 ? 'disabled' : ''}>السابق</button>
          <button id="next">${currentIndex === questions.length - 1 ? 'انتهيت' : 'التالى'}</button>
        </div>
      `;

      // تحديث المستمعين للأزرار بعد الDOM
      document.getElementById('prev').addEventListener('click', () => {
        // احفظ الاختيار الحالي قبل الانتقال
        saveCurrentAnswer();
        if (currentIndex > 0) {
          currentIndex--;
          renderQuestion();
        }
      });

      document.getElementById('next').addEventListener('click', () => {
        // احفظ الاختيار الحالي
        const chosen = document.querySelector('input[name="option"]:checked');
        if (!chosen && answers[currentIndex] === null) {
          alert('اختر إجابة قبل المتابعة.');
          return;
        }
        saveCurrentAnswer();

        if (currentIndex < questions.length - 1) {
          currentIndex++;
          renderQuestion();
        } else {
          showResults();
        }
      });
    }

    function saveCurrentAnswer() {
      const chosen = document.querySelector('input[name="option"]:checked');
      if (chosen) {
        answers[currentIndex] = parseInt(chosen.value, 10);
      }
    }

    function showResults() {
      // حساب الدرجة
      let score = 0;
      const total = questions.length;
      const perQ = questions.map((q, idx) => {
        const ok = answers[idx] === q.answer;
        if (ok) score++;
        return { question: q.q, your: answers[idx] != null ? q.options[answers[idx]] : 'لم تُجاوب', correct: q.options[q.answer], ok };
      });

      resultsArea.style.display = 'block';
      quizArea.style.display = 'none';

      const summaryHtml = `
        <h2>النتيجة: ${score} من ${total}</h2>
        <div class="summary">
          ${perQ.map((r, i) => `
            <div class="answerRow">
              <strong>س ${i+1}:</strong> سؤالك: ${r.question}<br/>
              اخترته: ${r.your} &nbsp;
              ${r.ok ? '<span class="correct">✅ صحيح</span>' : `<span style="color:#e53935">❌ خطأ. الإجابة الصحيحة: ${r.correct}</span>`}
            </div>
          `).join('')}
        </div>
        <div style="margin-top:12px;">
          <button id="restart">إعادة الاختبار</button>
        </div>
      `;
      resultsArea.innerHTML = summaryHtml;

      document.getElementById('restart').addEventListener('click', () => {
        // إعادة تعيين
        currentIndex = 0;
        answers.fill(null);
        resultsArea.style.display = 'none';
        quizArea.style.display = 'block';
        renderQuestion();
      });
    }

    // ابدأ أول سؤال
    renderQuestion();
  </script>
</body>
</html>